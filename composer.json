{
    "name": "phpsoftbox/cli-app",
    "description": "Console application component (CliApp) for PhpSoftBox Framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton K.",
            "email": "inspector-who@mail.ru"
        }
    ],
    "require": {
        "php": "^8.4",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "phpsoftbox/cs-fixer": "^1.0.3",
        "friendsofphp/php-cs-fixer": "^3.93"
    },
    "autoload": {
        "psr-4": {
            "PhpSoftBox\\CliApp\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PhpSoftBox\\CliApp\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/psb",
        "bin/_psb_completion"
    ],
    "scripts": {
        "test": "phpunit",
        "cs:fix": "vendor/bin/psb-cs-fixer fix",
        "cs:check": "vendor/bin/psb-cs-fixer check --diff"
    },
    "minimum-stability": "dev"
}
